FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      Ub;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField      #codeStream
{
    codeInclude
    #{
        #include "fvCFD.H"
    #};

    codeOptions
    #{
        -I$(LIB_SRC)/finiteVolume/lnInclude \
        -I$(LIB_SRC)/meshTools/lnInclude
    #};
    codeLibs
    #{
        -lfiniteVolume \
        -lmeshTools
    #};
    code
    #{
        const IOdictionary& d = static_cast<const IOdictionary&>(dict);
        const fvMesh& mesh = refCast<const fvMesh>(d.db());
        vectorField Ub(mesh.nCells(), vector(0.0, 0.0, 0.0));
        scalar maxy = (max(mesh.C().component(1))).value();
        forAll(mesh.C(), i)
        {
            scalar y = mesh.C()[i].y();
            Ub[i] = (vector(0.86, 0.0, 0.0)*y/maxy+vector(0.17, 0.0, 0.0));

        }
// OpenFoam.com version and Old OpenFoam.org (<= 6)
//        Ub.writeEntry("", os);
// New OpenFoam.org version (>=7)
        writeEntry(os, "", Ub);
    #};

};

boundaryField
{
    inlet
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }
    top
    {
        type            fixedValue;
        value           uniform (0.86 0 0);
//        type            zeroGradient;
    }
    bottom
    {
        type            fixedValue;
        value           uniform (0.17 0 0);
    }
    frontAndBackPlanes
    {
        type            empty;
    }
}


