FoamFile
{
    version     2.0;
    format      binary;
    arch        "LSB;label=32;scalar=64";
    class       volVectorField;
    location    "200";
    object      buoy_mixd;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -2 -2 0 0 0 0];

internalField   uniform (0 -9.81 0);

boundaryField
{
    bottomWall
    {
        type            calculated;
        value           uniform (0 -9.81 0);
    }
    topWall
    {
        type            calculated;
        value           uniform (0 -9.81 0);
    }
    left
    {
        type            cyclic;
    }
    right
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }
    inlet
    {
        type            cyclic;
    }
}


