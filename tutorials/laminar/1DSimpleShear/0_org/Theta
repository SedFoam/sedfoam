FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "50";
    object      Theta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1e-5; 

boundaryField
{
    inlet
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }
    top
    {
        type            fixedValue;
	value           uniform 0.005;   
    }
    bottom
    {
        type            fixedValue;
        value           uniform 0.004;
    }
    frontAndBackPlanes
    {
        type            empty;
    }
}


